               <hi rendition="#aq">7. </hi>
               <hi rendition="#b"><hi rendition="#aq">21</hi></hi><hi rendition="#aq">,</hi><hi rendition="#rkd"><hi rendition="#aq">14</hi></hi> 3 oder] <hi rendition="#aq">nachtr. <hi rendition="#i">H</hi>
               </hi>
               <lb/> deren jeden] <hi rendition="#aq">aus</hi> welche <hi rendition="#aq">
                  <hi rendition="#i">H</hi>
               </hi>
               <hi rendition="#b"><hi rendition="#aq">22</hi></hi><hi rendition="#aq">,</hi><hi rendition="#rkd"><hi rendition="#aq">4</hi></hi> allhier] <hi rendition="#aq">aus</hi> hier <hi rendition="#aq">
                  <hi rendition="#i">H</hi>
               </hi>
