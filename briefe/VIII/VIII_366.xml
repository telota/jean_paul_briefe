                     <cell>11</cell>
                     <cell>st. Verdienstliche l. <hi rendition="#g">Verdrießliche</hi>
                     </cell>
                  </row>
                  <lb xml:id="VIII_219-22"/>
                  <row>
                     <cell>143</cell>
                     <cell>2</cell>
                     <cell>27</cell>
                     <cell>st. einschränke l. <hi rendition="#g">einschränken</hi>
                     </cell>
                  </row>
                  <lb xml:id="VIII_219-23"/>
                  <row>
                     <cell>151</cell>
                     <cell>2</cell>
                     <cell>4</cell>
                     <cell>st. Deinem l. <hi rendition="#g">Deinen</hi>
