                  <row>
                     <cell>143</cell>
                     <cell>1</cell>
                     <cell>v. u. 7</cell>
                     <cell>
                        <hi rendition="#g">Hohen Lohe</hi> lies statt hohen Lohn</cell>
                  </row>
                  <note corresp="#VIII_219-20">
                     <listPerson type="lineReference">
                        <person corresp="#JP-001811">
                           <persName> Alexander Leopold Franz Emmerich, Prinz von <name type="reg">Hohenlohe-Waldenburg-Schillingsfürst</name>
                           </persName>
                        </person>
                     </listPerson>
                  </note>
                  <lb n="20" xml:id="VIII_219-20"/>
                  <row>
                     <cell>121</cell>
                     <cell>2</cell>
                     <cell>v. u. 15</cell>
                     <cell>statt <metamark>[</metamark>merkte<metamark>]</metamark> l. <hi rendition="#g">hörte</hi>
                     </cell>
                  </row>
                  <lb xml:id="VIII_219-21"/>
                  <row>
                     <cell>130</cell>
