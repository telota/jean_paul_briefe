   <text>
      <body>
         <div type="letter">
            <dateline>
               <hi rendition="#right">
                  <metamark>[</metamark>
                  <placeName>Bayreuth</placeName>,<date>27. Juni 1821</date>
                  <metamark>]</metamark>
               </hi>
