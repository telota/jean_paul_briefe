               <dateline>
                  <hi rendition="#left">
                     <hi rendition="#aq">
                        <placeName>Bayreuth</placeName> am ersten Pfingstfeiertag</hi>
                     <lb xml:id="VI_109-6"/>
                     <metamark>[</metamark>
                     <date>10. Juni<metamark>]</metamark> 1810</date>
                  </hi>
               </dateline>
               <lb xml:id="VI_109-7"/>
               <cb/>
               <salute>
                  <hi rendition="#right">Euer Hoheit<lb xml:id="VI_109-8"/> unterthänigster<lb xml:id="VI_109-9"/> Jean Paul Fr. Richter</hi>
                  <lb xml:id="VI_109-10"/>
               </salute>
            </closer>
         </div>
